<div class="container">
    <h2>Signup</h2>

    <form class="form signup-form">                                     <!--belongs to 2 classes- form and login-form-->
      
      <div class="form-group">
        <label for="first-name-signup">First Name:</label>
        <input class="form-input" type="text" id="first-name-signup" />
      </div>

      <div class="form-group">
        <label for="last-name-signup">Last Name:</label>
        <input class="form-input" type="text" id="last-name-signup" />
      </div>
      
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      
      <div class="form-group">
        <label for="phone-number-signup">Phone Number:</label>
        <input class="form-input" type="text" id="phone-number-signup" />
      </div>

      <div class="form-group">
        <label for="cv-signup"> CV(link):</label>
        <input class="form-input" type="text" id="cv-signup" />
      </div>
      
      <div class="form-group">
        <button class="button" type="submit">Signup</button>
      </div>
      
      <a href="/login">Login instead?</a>
    </form>
  </div>


  <script src="../public/js/signup.js"></script>