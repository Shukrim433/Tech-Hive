<div id="personal-info">
    <h1>Welcome, {{user.first_name}} {{user.last_name}}</h1> 
    <p>{{user.email}}</p>
</div>

<div class="profile-container">
    <h2>Your Applied Jobs: </h2>
    {{#if user.AppliedRoles.length}}
    {{#each user.AppliedRoles as |AppliedRole|}}
    <div class="profile-card">
        <h4><a href="/role/{{AppliedRole.role.id}}">{{AppliedRole.role.role_name}}</a></h4>           
        <p>{{AppliedRole.role.company}}</p>
        <p>{{AppliedRole.role.salary}}</p>
        <p>{{AppliedRole.role.job_type}}</p>
        <button class="button" data-id="{{AppliedRole.id}}">delete application</button>
    </div>
    {{else}}
    <p>You currently do not have any applied jobs.</p>
    {{/each}}
    {{/if}}
</div>

<div class="profile-container">
    <h2>Your Saved Jobs: </h2>
    {{#if user.SavedRoles.length}}
    {{#each user.SavedRoles as |SavedRole|}}
    <div class="profile-card">
        <h4><a href="/role/{{SavedRole.role.id}}">{{SavedRole.role.role_name}}</a></h4>
        <p>{{SavedRole.role.company}}</p>
        <p>{{SavedRole.role.salary}}</p>
        <p>{{SavedRole.role.job_type}}</p>
        <button class="button" data-id="{{SavedRole.id}}">delete saved job</button>
    </div>
    {{else}}
    <p>You currently do not have any saved jobs.</p>
    {{/each}}
    {{/if}}
</div>





























<script src="../public/js/profile.js"></script>
